// file: prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. ตารางผู้ใช้งาน
model User {
  id        Int        @id @default(autoincrement())
  username  String     @unique
  password  String     // เก็บ Password แบบ Hash
  fullName  String?    // ชื่อ-นามสกุลจริง (ไว้ใส่ท้ายเอกสาร)
  position  String?    // ตำแหน่งงาน (เช่น นักวิชาการคอมพิวเตอร์)
  department String?   // หน่วยงาน/สังกัด
  role      Role       @default(USER)
  
  documents Document[] // เอกสารที่ user คนนี้สร้าง
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
}

// 2. ตารางแม่แบบเอกสาร (เช่น "บันทึกข้อความ", "หนังสือเชิญประชุม")
model Template {
  id          Int        @id @default(autoincrement())
  name        String     // ชื่อ Template
  description String?    // คำอธิบาย
  filePath    String?    // path เก็บไฟล์ต้นฉบับ .docx/.html (ถ้ามี)
  structure   Json?      // เก็บโครงสร้างตัวแปรที่ต้องใช้ (เช่น { "recipient": "text", "date": "date" })
  
  documents   Document[]
  isActive    Boolean    @default(true)
  created_at  DateTime   @default(now())
}

// 3. ตารางเอกสารที่ถูกสร้างขึ้น (หัวใจหลักของ DocGen)
model Document {
  id             Int       @id @default(autoincrement())
  docNumber      String?   // เลขที่หนังสือ (เช่น อว 001/2568)
  subject        String    // เรื่อง (Subject ของเอกสาร)
  
  // ข้อมูลดิบที่ User กรอกเพื่อเอาไป Gen (เก็บเป็น JSON เพื่อความยืดหยุ่น)
  inputData      Json      // เช่น { "recipient": "ผอ.", "date": "28 พ.ย.", "body": "..." }
  
  // ผลลัพธ์ไฟล์
  generatedFile  String?   // URL หรือ Path ของไฟล์ PDF/Docx ที่ Gen เสร็จแล้ว
  
  status         DocStatus @default(DRAFT)
  
  // ความสัมพันธ์
  templateId     Int
  template       Template  @relation(fields: [templateId], references: [id])
  
  authorId       Int
  author         User      @relation(fields: [authorId], references: [id])
  
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt
}

// Enum: สถานะของ User
enum Role {
  USER
  ADMIN
}

// Enum: สถานะของเอกสาร
enum DocStatus {
  DRAFT       // ร่างอยู่ ยังไม่ Gen
  GENERATED   // Gen ไฟล์ออกมาแล้ว
  APPROVED    // (เผื่อมี) อนุมัติแล้ว/เซ็นแล้ว
  CANCELED    // ยกเลิก
}